// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Site configuration
model SiteConfig {
  id                         String   @id @default(cuid())
  company_name              String
  company_parentCompany     String
  company_logo              String
  company_tagline           String?
  contact_headOffice_email  String
  contact_headOffice_phone  String
  contact_headOffice_address String
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}

// User management
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Specialized section tables
model HeroSection {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?
  yearText  String?
  scrollText String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TruckRevealSection {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TruckRotationSection {
  id        String   @id @default(cuid())
  sections  Json     // Array of {number, title, subtitle, content}
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ServicesSection {
  id        String   @id @default(cuid())
  services  Json     // Array of service objects
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StatsSection {
  id        String   @id @default(cuid())
  stats     Json     // Array of {value, label}
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ShowcaseSection {
  id        String   @id @default(cuid())
  images    Json?    // Array of gallery images
  features  Json?    // Array of features
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RecordSection {
  id        String   @id @default(cuid())
  features  Json     // Array of features with icons
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model InteractiveCoverageSection {
  id           String   @id @default(cuid())
  regions      Json     // Array of region objects
  headquarters Json     // Headquarters info object
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}